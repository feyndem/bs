{
    "type": "FeatureCollection", 
    "features": [
    {% for marker in markers %}
        {
            "type": "Feature",
            "geometry": {
                "type": "Point",
                "coordinates": [{{ marker.point.lat }}, {{ marker.point.lng }}],
                "properties": {}
            }
        },
    {% endfor %}
    ], 
    "crs": {
        "type": "name", 
        "properties": {
            "name": "urn:ogc:def:crs:OGC:1.3:CRS84"
        }
    }
}